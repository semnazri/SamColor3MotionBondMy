<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyOwntheme" parent="MyOwntheme.Base"></style>

    <style name="MyOwntheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#333333</item>
        <item name="colorPrimaryDark">#333333</item>
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
        <!--<item name="colorControlNormal">@color/edt_login_color</item>-->
        <!--<item name="colorControlActivated">@color/edt_login_color</item>-->
        <!--<item name="colorControlHighlight">@color/edt_login_color</item>-->
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:popupBackground">#CFD0D3</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">30dp</item><!-- menu item height- vary as u need -->
        <item name="android:listDivider">@color/white</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">12sp</item>
        <!--<item name="android:paddingRight">15dp</item>-->
        <!--<item name="android:paddingLeft">-5dp</item>-->


    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
    <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
    <item name="tabIndicatorColor">@android:color/transparent</item>
    <item name="tabIndicatorHeight">2dp</item>
    <!--<item name="tabPaddingStart">12dp</item>-->
    <!--<item name="tabPaddingEnd">12dp</item>-->
    <item name="tabBackground">?attr/selectableItemBackground</item>
    <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
    <item name="tabSelectedTextColor">@color/white</item>
    </style>
</resources>
