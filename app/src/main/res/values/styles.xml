<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyOwntheme" parent="MyOwntheme.Base"></style>

    <style name="MyOwntheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#018dcb</item>
        <item name="colorPrimaryDark">#018dcb</item>
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
        <!--<item name="colorControlNormal">@color/edt_login_color</item>-->
        <!--<item name="colorControlActivated">@color/edt_login_color</item>-->
        <!--<item name="colorControlHighlight">@color/edt_login_color</item>-->
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:popupBackground">#CFD0D3</item>
    </style>
</resources>
